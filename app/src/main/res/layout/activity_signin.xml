<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="191dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:src="@drawable/playstore_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/playstore_icon_bg" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:paddingTop="20sp"
        android:shadowColor="#0E0E0E"
        android:text="2020 Vision"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="369dp"
        android:layout_height="17dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:includeFontPadding="false"
        android:shadowColor="#0E0E0E"
        android:text="Email: "
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="369dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="369dp"
        android:layout_height="17dp"
        android:layout_marginTop="364dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:includeFontPadding="false"
        android:shadowColor="#0E0E0E"
        android:text="Password: "
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/editEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="369dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/confirmDetails"
        android:layout_width="353dp"
        android:layout_height="46dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="8dp"
        android:text="Sign In with email"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        app:layout_constraintVertical_bias="0.168" />

    <Button
        android:id="@+id/google_signIn"
        android:layout_width="353dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@color/googleblue"
        android:elevation="8dp"
        android:text="Sign In with Google"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/confirmDetails"
        app:layout_constraintTop_toBottomOf="@+id/confirmDetails" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:shadowColor="#0E0E0E"
        android:text="Don't have an account? "
        android:textColor="@color/colorTextTitle"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google_signIn" />

    <TextView
        android:id="@+id/emailSignUp"
        android:layout_width="108dp"
        android:layout_height="23dp"
        android:text="Sign up here!"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/google_signIn"
        app:layout_constraintVertical_bias="0.496" />

    <ImageView
        android:id="@+id/ivEmail"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:elevation="10dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/confirmDetails"
        app:layout_constraintTop_toTopOf="@+id/confirmDetails"
        app:srcCompat="@drawable/fui_ic_mail_white_24dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="@+id/google_signIn"
        app:layout_constraintTop_toTopOf="@+id/google_signIn"
        app:srcCompat="@drawable/btn_google_light" />

</androidx.constraintlayout.widget.ConstraintLayout>